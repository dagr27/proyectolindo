<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Tourism">
    <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="AÃ±adir Nuevo Sitio: "
                android:padding="5dp"/>
        <Switch android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/enable_add"
        />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/addingT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
            <EditText
                    android:id="@+id/T_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Titulo|Nombre"
                    android:layout_margin="5dp"
                    android:layout_weight="0.75"/>
            <EditText
                    android:id="@+id/T_rate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Calificacion"
                    android:layout_margin="5dp"
                    android:inputType="numberDecimal"
                    android:layout_weight="1.25"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
            <EditText
                    android:id="@+id/T_desc"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:inputType="text|textMultiLine"
                    android:hint="Descripcion"
                    android:layout_margin="5dp"
                    android:layout_weight="0.25"/>
            <TextView
                    android:id="@+id/T_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.75"
                    android:drawableLeft="@drawable/add"

            />
        </LinearLayout>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tourAdmin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/card_tour">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>