<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.proyect.ecologic.activities.retosData">
    <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:text="Habilitar Edicion:"
        />
        <Switch android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/enable_edit_re"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
            <EditText
                    android:id="@+id/R_title_edit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Titulo"
                    android:layout_margin="5dp"
                    android:layout_weight="0.75"/>
            <EditText
                    android:id="@+id/R_cat_edit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Categoria"
                    android:layout_margin="5dp"
                    android:inputType="text"
                    android:layout_weight="1.25"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
            <EditText
                    android:id="@+id/R_love_edit"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:inputType="number"
                    android:hint="Amor"
                    android:layout_margin="5dp"
                    android:layout_weight="1"/>
            <EditText
                    android:id="@+id/R_sun_edit"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:inputType="number"
                    android:hint="Sol"
                    android:layout_margin="5dp"
                    android:layout_weight="1"/>
            <EditText
                    android:id="@+id/R_water_edit"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:inputType="number"
                    android:hint="Agua"
                    android:layout_margin="5dp"
                    android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button android:layout_width="match_parent"
                android:id="@+id/btnAct_re_su"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:textColor="#fff"
                android:text="Actualizar InformaciÃ³n"
                android:background="@drawable/btn_home"
                android:backgroundTint="#ff9800"
                android:visibility="invisible"/>
    </LinearLayout>

</LinearLayout>
