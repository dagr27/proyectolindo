<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/back_home2"
        app:rowCount="7"
        app:columnCount="1">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/top"
                  android:paddingTop="20dp"
                  android:paddingBottom="10dp"
                  android:orientation="vertical"
                  android:gravity="center|center_horizontal"
                  app:layout_row="0">
        <ImageView android:layout_width="250dp"
                   android:src="@drawable/logo_tipo_green"
                   android:layout_height="100dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Registro"
                  android:gravity="center"
                  android:textColor="#01cb75"
                  android:textSize="18dp"
                  android:fontFamily="sans-serif"/>


    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="25dp"
                  android:orientation="horizontal"
                  app:layout_gravity="center"
                  android:weightSum="2"
                  app:layout_row="1">
        <EditText android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:layout_height="50dp"
                  android:hint="Nombre"
                  android:id="@+id/name"
                  android:drawableLeft="@drawable/person"
                  android:drawableTint="#01cb75"
                  android:drawablePadding="5dp"
                  android:textColorHint="#01cb75"
                  android:layout_margin="10dp"
                  android:textColor="#9a989d"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:layout_weight="1"
                  android:layout_margin="10dp"
                  android:hint="Apellido"
                  android:id="@+id/lastname"
                  android:drawableLeft="@drawable/person"
                  android:drawableTint="#01cb75"
                  android:drawablePadding="5dp"
                  android:textColorHint="#01cb75"
                  android:textColor="#9a989d"/>



    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  app:layout_gravity="center"
                  app:layout_row="2">
        <EditText android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:layout_height="50dp"
                  android:hint="Email"
                  android:drawableLeft="@drawable/email"
                  android:drawableTint="#01cb75"
                  android:id="@+id/email"
                  android:drawablePadding="10dp"
                  android:textColorHint="#01cb75"
                  android:layout_margin="10dp"
                  android:textColor="#9a989d"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  app:layout_gravity="center"
                  app:layout_row="3">
        <EditText android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:layout_height="50dp"
                  android:hint="Usuario"
                  android:drawableLeft="@drawable/user"
                  android:drawableTint="#01cb75"
                  android:drawablePadding="10dp"
                  android:id="@+id/user"
                  android:textColorHint="#01cb75"
                  android:layout_margin="10dp"
                  android:textColor="#9a989d"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  app:layout_gravity="center"
                  app:layout_row="4">
        <EditText android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:layout_height="50dp"
                  android:inputType="date"
                  android:hint="Fecha de Nacimiento"
                  android:id="@+id/date"
                  android:drawableLeft="@drawable/date"
                  android:drawableTint="#01cb75"
                  android:drawablePadding="10dp"
                  android:textColorHint="#01cb75"
                  android:layout_margin="10dp"
                  android:textColor="#9a989d"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  app:layout_gravity="center|top"
                  app:layout_row="5">
        <EditText android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:layout_height="50dp"
                  android:inputType="textPassword"
                  android:hint="Contraseña"
                  android:id="@+id/pass"
                  android:drawableLeft="@drawable/key"
                  android:drawableTint="#01cb75"
                  android:drawablePadding="10dp"
                  android:textColorHint="#01cb75"
                  android:layout_margin="10dp"
                  android:textColor="#9a989d"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/footer"
                  android:layout_marginBottom="50dp"
                  android:orientation="vertical"
                  app:layout_row="6">
        <Button android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#fff"
                android:textColor="#01cb75"
                android:textSize="20dp"
                android:text="registrarse"
                android:id="@+id/reg_btn"
                android:background="@drawable/home_rounded"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="50dp"
                  android:layout_marginLeft="50dp"
                  android:layout_gravity="center_horizontal"
                  android:text="¿Ya tienes Cuenta? Inicia Sesion"
                  android:gravity="center"
                  android:textColor="#6A6A6F"
                  android:textSize="18dp"
                  android:fontFamily="sans-serif"/>

    </LinearLayout>


</androidx.gridlayout.widget.GridLayout>