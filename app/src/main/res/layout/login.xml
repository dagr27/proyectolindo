<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_home2"
        app:rowCount="2"
        tools:context=".Login"
        app:columnCount="1">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/body"
                  android:gravity="center"
                  android:orientation="vertical"
                  app:layout_gravity="fill_horizontal|center"
                  app:layout_row="1">
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="25dp"
                      android:gravity="center">
            <ImageView android:layout_width="250dp"
                       android:src="@drawable/logo_tipo_green"
                       android:layout_height="100dp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Inicie Sesion"
                      android:gravity="center"
                      android:textColor="#01cb75"
                      android:textSize="18dp"
                      android:fontFamily="sans-serif"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/type_login"
                    android:text=""
            />
        </LinearLayout>


        <EditText android:layout_width="match_parent"
                  android:layout_height="70dp"
                  android:hint="Correo Electronico"
                  android:id="@+id/txt_username"
                  android:drawableLeft="@drawable/person"
                  android:drawableTint="#01cb75"
                  android:drawablePadding="10dp"
                  android:textColorHint="#01cb75"
                  android:layout_marginRight="50dp"
                  android:layout_marginLeft="50dp"
                  android:layout_marginBottom="15dp"
                  android:textColor="#9a989d"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="70dp"
                  android:layout_marginRight="50dp"
                  android:layout_marginLeft="50dp"
                  android:layout_marginBottom="10dp"
                  android:id="@+id/txt_pass"
                  android:inputType="textPassword"
                  android:hint="Contrase単a"
                  android:drawableLeft="@drawable/key"
                  android:drawableTint="#01cb75"
                  android:drawablePadding="10dp"
                  android:textColorHint="#01cb75"
                  android:textColor="#9a989d"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="50dp"
                  android:layout_marginLeft="50dp"
                  android:layout_gravity="right"
                  android:text="多Olvidaste la Contrase単a?"
                  android:gravity="center"
                  android:textColor="#6A6A6F"
                  android:textSize="18dp"
                  android:fontFamily="sans-serif"/>


    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/footer"
                  app:layout_gravity="center_horizontal"
                  android:orientation="vertical"
                  android:layout_marginBottom="50dp"
                  app:layout_row="1">
        <Button android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="10dp"
                android:textColor="#01cb75"
                android:textSize="20dp"
                android:id="@+id/btnLog"
                android:text="Iniciar sesion"
                android:backgroundTint="#fff"
                android:background="@drawable/home_rounded"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="50dp"
                  android:id="@+id/btnRegAct"
                  android:layout_marginLeft="50dp"
                  android:layout_gravity="center_horizontal"
                  android:text="多No tienes Cuenta? Registrate"
                  android:gravity="center"
                  android:textColor="#6A6A6F"
                  android:textSize="18dp"
                  android:fontFamily="sans-serif"/>

    </LinearLayout>

</androidx.gridlayout.widget.GridLayout>