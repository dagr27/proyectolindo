<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:weightSum="3"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".fragments.ChallengeFragment">

    <HorizontalScrollView android:layout_width="wrap_content"
                          android:scrollbars="none"
                          android:layout_height="wrap_content">
        <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardBackgroundColor="#efefef"
                        card_view:cardCornerRadius="6dp">

                    <LinearLayout
                            android:gravity="center"
                            android:id="@+id/btn_recycler"
                            android:padding="15dp"
                            android:background="@drawable/card"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:orientation="vertical">
                        <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/recycler"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <TextView
                        android:layout_width="match_parent"
                        android:text="Reciclaje"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardBackgroundColor="#efefef"
                        card_view:cardCornerRadius="6dp">

                    <LinearLayout
                            android:id="@+id/btn_electric"
                            android:gravity="center"
                            android:padding="15dp"
                            android:background="@drawable/card"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:orientation="vertical">
                        <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/plug"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <TextView
                        android:layout_width="match_parent"
                        android:text="Energia"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardBackgroundColor="#efefef"
                        card_view:cardCornerRadius="6dp">

                    <LinearLayout
                            android:id="@+id/btn_transport"
                            android:gravity="center"
                            android:padding="15dp"
                            android:background="@drawable/card"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:orientation="vertical">
                        <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/car"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <TextView
                        android:layout_width="match_parent"
                        android:text="Transporte"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardBackgroundColor="#efefef"
                        card_view:cardCornerRadius="6dp">

                    <LinearLayout
                            android:id="@+id/btn_food"
                            android:gravity="center"
                            android:padding="15dp"
                            android:background="@drawable/card"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:orientation="vertical">
                        <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/food"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <TextView
                        android:layout_width="match_parent"
                        android:text="Consumo"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardBackgroundColor="#efefef"
                        card_view:cardCornerRadius="6dp">

                    <LinearLayout
                            android:id="@+id/btn_social"
                            android:gravity="center"
                            android:padding="15dp"
                            android:background="@drawable/card"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:orientation="vertical">
                        <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/social"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <TextView
                        android:layout_width="match_parent"
                        android:text="Social"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_challenges"
            android:paddingTop="3dp"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>