<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.RetosSup">
    <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="AÃ±adir Nuevo Sitio: "
                android:padding="5dp"/>
        <Switch android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/enable_add_reto"
        />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/addingR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
            <EditText
                    android:id="@+id/R_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Titulo"
                    android:layout_margin="5dp"
                    android:layout_weight="0.75"/>
            <EditText
                    android:id="@+id/R_cat"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Categoria"
                    android:layout_margin="5dp"
                    android:inputType="text"
                    android:layout_weight="1.25"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4">
            <EditText
                    android:id="@+id/R_love"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:inputType="number"
                    android:hint="Amor"
                    android:layout_margin="5dp"
                    android:layout_weight="1"/>
            <EditText
                    android:id="@+id/R_sun"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:inputType="number"
                    android:hint="Sol"
                    android:layout_margin="5dp"
                    android:layout_weight="1"/>
            <EditText
                    android:id="@+id/R_water"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:inputType="number"
                    android:hint="Agua"
                    android:layout_margin="5dp"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/R_add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTint="@color/colorBlue"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/update"

            />

        </LinearLayout>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_challengesAdmin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/card_challenge">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>