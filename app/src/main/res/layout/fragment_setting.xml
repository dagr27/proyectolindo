<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_height="match_parent"
            tools:context=".fragments.SettingFragment">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/preview_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:civ_border_width="2dp"
                app:civ_border_color="#fff"/>

        <Button
                android:id="@+id/btn_changePhoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="-25dp"
                android:background="@drawable/add"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#4D5656"
                android:background="#f5f5f5"
                android:padding="10dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:text="Informacion personal"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4D5656"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:text="Nombre*"/>

        <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:paddingBottom="20dp"
                android:layout_marginBottom="10dp"
                android:hint="Nombre"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4D5656"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:text="Apellido"/>

        <EditText
                android:id="@+id/et_lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"
                android:hint="Apellido"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4D5656"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:text="Correo electronico*"/>

        <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"
                android:enabled="false"
                android:paddingBottom="20dp"
                android:hint="Correo electronico"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4D5656"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:text="Nombre de cactus*"/>

        <EditText
                android:id="@+id/et_plant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="20dp"
                android:hint="ex. Moshii"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#4D5656"
                android:background="#f5f5f5"
                android:padding="10dp"

                android:textStyle="bold"
                android:text="Apariencia"/>


        <Switch
                android:text="Desactivar cuenta"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/switchMode"/>

        <Button
                android:id="@+id/btn_saveChanges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="80dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:background="@drawable/buttonradius"
                android:text="Guardar cambios"/>

    </LinearLayout>
</ScrollView>