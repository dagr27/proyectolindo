<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
    <LinearLayout
            android:id="@id/home"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:layout_height="match_parent"
            tools:context=".fragments.HomeFragment">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="14dp"
                android:paddingRight="25dp"
                android:background="#fff"
                android:paddingTop="15dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/iv_plant"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/plant3"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_marginRight="5dp"
                            android:gravity="right"
                            android:layout_height="match_parent"
                            android:src="@drawable/progress"/>

                    <TextView
                            android:id="@+id/tv_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:textSize="45dp"
                            android:textColor="#d2cccc"
                            android:fontFamily="sans-serif-light"
                            android:text="70%"/>

                </LinearLayout>

                <ProgressBar
                        android:id="@+id/pb_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progress="70"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                <ProgressBar
                        android:id="@+id/pb_level2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-13dp"
                        android:progress="70"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="15dp"
                android:background="#fff"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_plant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:fontFamily="@font/bold"
                        android:textColor="#000"
                        android:textSize="23dp"
                        android:text="Moshii"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <ImageView
                            android:layout_width="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/signal"/>

                    <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:textSize="16dp"
                            android:text="Estable"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:padding="12dp"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/btn_challenges"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="CUIDAR"
                        android:textColor="#fff"
                        android:layout_gravity="right"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:background="@drawable/buttonradius"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_marginBottom="2dp"
                android:weightSum="3"
                android:background="#fff"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="26dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="20dp"
                    android:layout_weight="1">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingRight="8dp"
                        android:orientation="vertical">

                    <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/sunny"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        <TextView
                                android:id="@+id/tv_sun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textSize="15dp"
                                android:textColor="#000"
                                android:fontFamily="sans-serif-light"
                                android:text="Sol"/>

                    </LinearLayout>

                    <ProgressBar
                            android:id="@+id/pb_sun"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="50"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="20dp"
                    android:layout_weight="1">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingRight="8dp"
                        android:orientation="vertical">

                    <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/water2"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        <TextView
                                android:id="@+id/tv_water"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textSize="15dp"
                                android:textColor="#000"
                                android:fontFamily="sans-serif-light"
                                android:text="Agua"/>

                    </LinearLayout>

                    <ProgressBar
                            android:id="@+id/pb_water"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="60"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="20dp"
                    android:paddingRight="26dp"

                    android:layout_weight="1">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingRight="8dp"
                        android:orientation="vertical">

                    <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/hearth"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        <TextView
                                android:id="@+id/tv_love"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textSize="15dp"
                                android:textColor="#000"
                                android:fontFamily="sans-serif-light"
                                android:text="Amor"/>

                    </LinearLayout>

                    <ProgressBar
                            android:id="@+id/pb_love"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="60"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
                android:id="@+id/daily_challenge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

            <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"

                    android:gravity="center"
                    android:padding="15dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_h_day"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="left"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:text="13"/>

                <TextView
                        android:id="@+id/tv_h_mes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="13dp"
                        android:textColor="#fff"
                        android:text="JUNIO"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_h_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:textSize="14dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/iv_upwater"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/upwater"/>

                    <TextView
                            android:id="@+id/tv_h_water"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#3498DB"
                            android:layout_marginRight="5dp"
                            android:textSize="11dp"
                            android:text="30%"/>

                    <ImageView
                            android:id="@+id/iv_upsun"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/upsun"/>

                    <TextView
                            android:id="@+id/tv_h_sun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#F1C40F"
                            android:layout_marginRight="5dp"
                            android:textSize="11dp"
                            android:text="30%"/>

                    <ImageView
                            android:id="@+id/iv_uplove"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/uplove"/>

                    <TextView
                            android:id="@+id/tv_h_love"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#E74C3C"
                            android:textSize="11dp"
                            android:text="30%"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="18dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/iv_thumb"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/thumb"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
                android:id="@+id/tv_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:text="Eventos pendientes"/>

        <RelativeLayout
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_events"
                    android:layout_marginBottom="65dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>